{
  "name": "node-auth-mock",
  "version": "1.0.0",
  "author": "Julie Ng <me@julie.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/julie-ng/node-auth-mock"
  },
  "scripts": {
    "prestart": "npm run build",
    "start": "node dist/app.js",
    "dev": "concurrently 'npm run server' 'npm run lint:watch' 'PORT=3001 npm run test:watch'",
    "server": "nodemon -w src --exec 'babel-node src/app'",
    "build": "babel src --out-dir dist --ignore *spec.js",
    "release": "standard-version",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:watch": "nodemon -w specs -w src --exec 'npm run lint'",
    "test": "babel-node jasmine.js",
    "test:watch": "nodemon -w specs -w src --exec 'npm test'",
    "preflight": "npm run lint && npm run test"
  },
  "dependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-root-import": "^5.1.0",
    "babel-preset-es2015": "^6.18.0",
    "body-parser": "^1.16.0",
    "express": "^4.14.0",
    "faker": "^4.1.0",
    "http": "^0.0.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "eslint": "^3.19.0",
    "jasmine": "^2.5.3",
    "nodemon": "^1.11.0",
    "request": "^2.81.0",
    "standard-version": "^4.2.0"
  },
  "engines": {
    "node": "7.10.0",
    "npm": "4.2.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      [
        "babel-plugin-root-import",
        {
          "rootPathPrefix": "~",
          "rootPathSuffix": "src"
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "env": {
      "es6": true,
      "jasmine": true,
      "node": true
    },
    "globals": {
      "context": true
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "semi": [
        "error",
        "always"
      ],
      "space-before-blocks": "error",
      "space-before-function-paren": "error",
      "spaced-comment": [
        "error",
        "always",
        {
          "exceptions": [
            "-",
            "+"
          ]
        }
      ],
      "strict": "warn"
    }
  }
}
